<h1>Signup</h1>

<%= form_with model: @user, url: signup_path, local: true, html: { multipart: true } do |f| %>
  <label>Email:</label>
  <%= f.email_field :email, required: true %>

  <label>Password:</label>
  <%= f.password_field :password, required: true %>

  <label>Password Confirmation:</label>
  <%= f.password_field :password_confirmation, required: true %>

  <label>Name:</label>
  <%= f.text_field :name, required: true %>

  <label>About:</label>
  <%= f.text_area :about %>

  <label>Upload Profile Picture (optional):</label>
  <%= f.file_field :profile_pic %>

  <%= f.submit "Signup", class: "button" %>
<% end %>

<p>
  Existing user? <%= link_to "Login", login_path %>
</p>
