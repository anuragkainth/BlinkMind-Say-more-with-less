<h1>Edit Profile</h1>

<%= form_with model: @user, local: true, html: { multipart: true } do |f| %>
  <label>Name:</label>
  <%= f.text_field :name, required: true %>

  <label>About:</label>
  <%= f.text_area :about %>

  <label>Update Profile Picture:</label>
  <%= f.file_field :profile_pic %>

  <%= f.submit "Update Profile", class: "button" %>
<% end %>

<p>
  <%= link_to "Back to Profile", user_path(@user) %>
</p>

